# ============================================
# AutoGuardRails Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# --------------------------------------------
# Required Settings
# --------------------------------------------

# Slack webhook URL for notifications (from Slack App settings)
# Get this from: https://api.slack.com/apps → Your App → Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# AWS Region where resources will be deployed
AWS_REGION=ap-northeast-1

# DynamoDB table name for audit logs
DYNAMODB_TABLE_NAME=autoguardrails-audit

# Path to policy YAML files
POLICIES_PATH=./policies

# --------------------------------------------
# Optional Settings
# --------------------------------------------

# Approval webhook secret for signature verification
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
APPROVAL_SECRET=your-random-secret-key-here

# Global dry-run mode (set to "true" to disable all actions)
# GLOBAL_DRY_RUN=false

# API Gateway base URL for approval webhooks (set after deployment)
# API_BASE_URL=https://your-api-id.execute-api.ap-northeast-1.amazonaws.com/prod

# --------------------------------------------
# Development Settings
# --------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# AWS Profile (for local development)
# AWS_PROFILE=default

# --------------------------------------------
# Testing Settings
# --------------------------------------------

# Use LocalStack for local testing
# LOCALSTACK_ENDPOINT=http://localhost:4566

# Disable SSL verification (for LocalStack)
# AWS_NO_VERIFY_SSL=false
